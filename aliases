alias p3="python3"
alias h='history | grep $1'
alias c='clear'
alias mkdir='mkdir -pv'
alias scroff='xset dpms force off'
alias nemo='nemo --no-desktop'
alias xboxasmouse='sudo xboxdrv -w 0 --controller-slot 0 --detach-kernel-driver --mouse'
